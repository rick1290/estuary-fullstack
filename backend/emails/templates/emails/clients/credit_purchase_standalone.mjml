<mjml>
  <mj-head>
    <mj-font name="DM Sans" href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" />
    <mj-attributes>
      <mj-all font-family="'DM Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#3c412a" />
      <mj-button background-color="#7a8b63" color="#ffffff" font-weight="600" border-radius="12px" padding="14px 32px" font-size="16px" />
    </mj-attributes>
  </mj-head>

  <mj-body background-color="#f5f1e6">
    <mj-section background-color="#ffffff" padding="32px 24px">
      <mj-column>
        <mj-text align="center" font-size="20px" font-weight="700" color="#3c412a" letter-spacing="5px" padding="12px 0">ESTUARY</mj-text>
      </mj-column>
    </mj-section>

    <mj-wrapper background-color="#fdfcf8" padding="0 24px">
      <mj-section padding="12px 0 8px">
        <mj-column>
          <mj-text align="center" font-size="18px" padding-bottom="4px">ðŸ’°</mj-text>
          <mj-text align="center" font-size="18px" font-weight="700" color="#3c412a" padding-bottom="2px">Credits Added!</mj-text>
          <mj-text align="center" font-size="13px" color="#6f7a47">Your account has been topped up</mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#ffffff" border-radius="16px" padding="24px 20px">
        <mj-column>
          <mj-text align="center" font-size="36px" font-weight="700" color="#7a8b63" padding-bottom="12px">${{ credit_amount }}</mj-text>
          <mj-text align="center" padding-bottom="20px">has been added to your account</mj-text>

          <mj-divider border-color="#e2d5bd" padding="16px 0" />

          <mj-text padding-bottom="12px"><span style="font-weight: 600; color: #3c412a;">New Balance:</span> ${{ new_balance }}</mj-text>
          <mj-text padding-bottom="12px"><span style="font-weight: 600; color: #3c412a;">Purchase Date:</span> {{ purchase_date }}</mj-text>
          <mj-text padding-bottom="20px"><span style="font-weight: 600; color: #3c412a;">Expires:</span> {{ expiry_date }}</mj-text>

          <mj-button href="{{ WEBSITE_URL }}{{ URL_PATHS.MARKETPLACE }}">Browse Services</mj-button>
        </mj-column>
      </mj-section>

      <mj-section background-color="#f5f1e6" border-radius="12px" border-left="4px solid #7a8b63" padding="24px 28px">
        <mj-column>
          <mj-text font-size="14px" font-weight="600" color="#6f7a47" padding-bottom="8px">ðŸ’¡ Using Your Credits</mj-text>
          <mj-text font-size="14px" line-height="1.6" color="#3c412a">
            Credits are automatically applied at checkout. Book any session, workshop, or course and your credits will be used first.
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>

    <mj-section background-color="#3c412a" padding="40px 24px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="18px" font-weight="700" letter-spacing="5px" padding-bottom="16px">ESTUARY</mj-text>
        <mj-text align="center" color="#8b985b" font-size="12px">Â© {{ YEAR }} ESTUARY. All rights reserved.</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
