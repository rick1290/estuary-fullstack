{% extends "emails/base.mjml" %}

{% block content %}
<!-- Confirmation Hero -->
<mj-section padding="48px 0 32px">
  <mj-column>
    <mj-text align="center" font-size="48px" padding-bottom="16px">
      âœ“
    </mj-text>
    <mj-text align="center" font-size="32px" font-weight="700" color="#3c412a" padding-bottom="16px">
      Booking Confirmed!
    </mj-text>
    <mj-text align="center" font-size="16px" color="#6f7a47">
      We've sent your booking details to {{ practitioner.display_name }}
    </mj-text>
  </mj-column>
</mj-section>

<!-- Practitioner Info -->
{% include 'emails/components/practitioner_card.mjml' %}

<!-- Spacing -->
<mj-section padding="16px 0">
  <mj-column></mj-column>
</mj-section>

<!-- Booking Details Card -->
{% include 'emails/components/booking_card.mjml' %}

<!-- What's Next Section -->
<mj-section background-color="#ffffff" border-radius="12px" padding="32px" css-class="card">
  <mj-column>
    <mj-text font-size="20px" font-weight="700" color="#3c412a" padding-bottom="20px">
      What's Next?
    </mj-text>

    <mj-text font-size="14px" line-height="1.6" padding-bottom="12px">
      ğŸ“§ <strong>24-hour reminder:</strong> We'll send you a reminder the day before your session
    </mj-text>

    <mj-text font-size="14px" line-height="1.6" padding-bottom="12px">
      â° <strong>30-minute reminder:</strong> You'll get another reminder 30 minutes before
    </mj-text>

    {% if service.location_type == 'virtual' %}
    <mj-text font-size="14px" line-height="1.6" padding-bottom="20px">
      ğŸ¥ <strong>Join link:</strong> You'll receive the video call link in your reminder emails
    </mj-text>
    {% else %}
    <mj-text font-size="14px" line-height="1.6" padding-bottom="20px">
      ğŸ“ <strong>Location details:</strong> Please arrive 5 minutes early
    </mj-text>
    {% endif %}

    <!-- CTA Buttons -->
    {% include 'emails/components/button.mjml' with button_text="View Booking" button_url=WEBSITE_URL|add:"/dashboard/bookings/"|add:booking.id %}

    <mj-text align="center" padding-top="16px">
      <a href="{{ WEBSITE_URL }}/dashboard/bookings/{{ booking.id }}/reschedule" style="color: #7a8b63; font-size: 14px;">Need to reschedule?</a>
    </mj-text>
  </mj-column>
</mj-section>

<!-- Preparation Tip -->
{% if booking.special_requests %}
<mj-section background-color="#f5f1e6" border-radius="12px" border-left="4px solid #7a8b63" padding="24px 28px">
  <mj-column>
    <mj-text font-size="14px" font-weight="600" color="#6f7a47" padding-bottom="8px">
      ğŸ“ Your Note to Practitioner
    </mj-text>
    <mj-text font-size="14px" line-height="1.6" color="#3c412a">
      {{ booking.special_requests }}
    </mj-text>
  </mj-column>
</mj-section>
{% endif %}

<!-- Support -->
<mj-section padding="32px 0">
  <mj-column>
    <mj-text align="center" font-size="14px" color="#8b985b">
      Questions about your booking?<br/>
      <a href="mailto:{{ SUPPORT_EMAIL }}" style="color: #7a8b63; font-weight: 600;">Contact Support</a>
    </mj-text>
  </mj-column>
</mj-section>
{% endblock %}
