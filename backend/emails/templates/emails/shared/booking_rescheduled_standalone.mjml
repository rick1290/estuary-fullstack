<mjml>
  <mj-head>
    <mj-font name="DM Sans" href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" />
    <mj-attributes>
      <mj-all font-family="'DM Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#3c412a" />
      <mj-button background-color="#7a8b63" color="#ffffff" font-weight="600" border-radius="12px" padding="14px 32px" font-size="16px" />
    </mj-attributes>
  </mj-head>

  <mj-body background-color="#f5f1e6">
    <mj-section background-color="#ffffff" padding="32px 24px">
      <mj-column>
        <mj-text align="center" font-size="20px" font-weight="700" color="#3c412a" letter-spacing="5px" padding="12px 0">ESTUARY</mj-text>
      </mj-column>
    </mj-section>

    <mj-wrapper background-color="#fdfcf8" padding="0 24px">
      <mj-section padding="40px 0 20px">
        <mj-column>
          <mj-text align="center" font-size="48px" padding-bottom="16px">ğŸ“…</mj-text>
          <mj-text align="center" font-size="32px" font-weight="700" color="#3c412a" padding-bottom="8px">Booking Rescheduled</mj-text>
          <mj-text align="center" font-size="16px" color="#6f7a47">Your session has been moved to a new time</mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#ffffff" border-radius="16px" padding="32px 24px">
        <mj-column>
          <mj-text font-size="20px" font-weight="600" color="#7a8b63" padding-bottom="16px">{{ service_name }}</mj-text>
          <mj-text padding-bottom="12px"><span style="font-weight: 600; color: #3c412a;">{% if is_practitioner %}Client{% else %}Practitioner{% endif %}:</span> {{ other_party_name }}</mj-text>

          <mj-divider border-color="#e2d5bd" padding="16px 0" />

          <mj-text font-size="16px" font-weight="600" color="#8b985b" padding-bottom="8px">Previous Time</mj-text>
          <mj-text padding-bottom="16px" color="#8b985b">{{ old_date }} at {{ old_time }}</mj-text>

          <mj-text font-size="16px" font-weight="600" color="#7a8b63" padding-bottom="8px">New Time</mj-text>
          <mj-text padding-bottom="20px"><strong>{{ new_date }} at {{ new_time }}</strong></mj-text>

          <mj-button href="{{ WEBSITE_URL }}/bookings/{{ booking_id }}">View Details</mj-button>
        </mj-column>
      </mj-section>

      <mj-section background-color="#f5f1e6" border-radius="12px" border-left="4px solid #7a8b63" padding="24px 28px">
        <mj-column>
          <mj-text font-size="14px" font-weight="600" color="#6f7a47" padding-bottom="8px">ğŸ“ Note</mj-text>
          <mj-text font-size="14px" line-height="1.6" color="#3c412a">
            You'll receive reminder notifications for your new session time. Add the new time to your calendar to stay organized.
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section padding="32px 0">
        <mj-column>
          <mj-text align="center" font-size="14px" color="#8b985b">
            Add to calendar: <a href="#" style="color: #7a8b63; font-weight: 600;">Google</a> Â· <a href="#" style="color: #7a8b63; font-weight: 600;">Apple</a> Â· <a href="#" style="color: #7a8b63; font-weight: 600;">Outlook</a>
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>

    <mj-section background-color="#3c412a" padding="40px 24px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="18px" font-weight="700" letter-spacing="5px" padding-bottom="16px">ESTUARY</mj-text>
        <mj-text align="center" color="#8b985b" font-size="12px">Â© {{ YEAR }} ESTUARY. All rights reserved.</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
